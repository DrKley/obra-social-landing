---
import Badge from "./badge.astro";

const values = [
  "Compassion",
  "Dignity",
  "Respect",
  "Family Support",
  "Integrity",
  "Presence",
  "Comfort",
];
---

<section
  class="relative overflow-hidden bg-green text-white px-6 py-16 md:px-20 flex flex-col gap-16"
>
  <!-- Mission and Vision -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 text-center md:text-left">
    <div>
      <h2 class="text-4xl font-bold mb-4">Our Commitment to Patients & Families</h2>
      <p class="text-lg leading-relaxed font-semibold">
        Our mission is to bring comfort, dignity, and meaningful support to individuals facing serious illness through compassionate end-of-life care. We strive to understand each person's unique needs, honor their values, and walk alongside families with empathy and guidance so every moment can be met with presence, understanding, and peace.
      </p>
    </div>

    <div>
      <h2 class="text-4xl font-bold mb-4">Our Promise to the Community</h2>
      <p class="text-lg leading-relaxed font-semibold">
        To be a trusted leader in hospice care across California, known for exceptional patient support, transparency, and family-centered service.
      </p>
    </div>
  </div>

  <!-- Values -->
  <div class="flex flex-col items-center md:items-start gap-6">
    <h2 class="text-2xl font-bold tracking-wide">VALUES</h2>
    <div class="flex flex-wrap justify-center md:justify-start gap-3">
      {values.map((value) => <Badge label={value} />)}
    </div>
  </div>
</section>
