---
import logo from "../../assets/main-logo.png";
---

<nav class="bg-white shadow-md fixed top-0 left-0 w-full z-50 mb-5">
  <div class="max-w-7xl mx-auto px-6 py-3 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center">
      <div
        class="flex flex-col items-center md:items-start text-center md:text-left"
      >
        <img src={logo.src} alt="Logo" class="h-12 w-auto object-contain" />
      </div>
    </a>

    <!-- Links md+ -->
    <ul class="hidden md:flex space-x-8 items-center">
      <li>
        <a
          href="#about-hospice"
          class="relative group text-gray-700 font-bold transition-colors duration-300 hover:text-[#2F855A]"
        >
          About Hospice Care
          <span
            class="absolute left-0 -bottom-2 w-0 h-0.5 bg-[#2F855A] transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </li>
      <li>
        <a
          href="#get-guidance"
          class="relative group text-gray-700 font-bold transition-colors duration-300 hover:text-[#2F855A]"
        >
          Get Free Guidance
          <span
            class="absolute left-0 -bottom-2 w-0 h-0.5 bg-[#2F855A] transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </li>
      <li>
        <a
          href="#hospice-faq"
          class="relative group text-gray-700 font-bold transition-colors duration-300 hover:text-[#2F855A]"
        >
          Hospice FAQ
          <span
            class="absolute left-0 -bottom-2 w-0 h-0.5 bg-[#2F855A] transition-all duration-300 group-hover:w-full"
          ></span>
        </a>
      </li>
      <li>
        <a
          href="tel:949-664-9916"
          class="px-4 py-2 text-white font-semibold rounded-3xl bg-[#2F855A] hover:bg-[#186e43] transition flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
          </svg>
          949-664-9916
        </a>
      </li>
      <li>
        <a
          href="#contact"
          class="px-4 py-2 text-[#2F855A] font-semibold border-2 border-[#2F855A] rounded-3xl hover:bg-[#2F855A] hover:text-white transition"
        >
          Contact Us
        </a>
      </li>
    </ul>

    <!-- Menú hamburguesa móvil -->
    <div class="md:hidden relative">
      <input id="menu-toggle" type="checkbox" class="peer hidden" />

      <!-- Botón hamburguesa / cierre -->
      <label for="menu-toggle" class="cursor-pointer z-50 flex items-center">
        <!-- menu móvil  -->
        <svg
          class="h-6 w-6 text-gray-700 peer-checked:hidden"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>

        <!-- X -->
        <svg
          class="h-6 w-6 text-gray-700 hidden peer-checked:block"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </label>

      <!-- Overlay semi-transparente -->
      <label
        for="menu-toggle"
        class="fixed inset-0 bg-black/60 hidden peer-checked:block cursor-pointer z-40"
      ></label>

      <!-- Menú lateral -->
      <div
        class="fixed top-0 right-0 h-full w-64 bg-white shadow-lg transform translate-x-full transition-transform duration-300 peer-checked:translate-x-0 z-50"
      >
        <!-- Botón de cierre -->
        <div class="flex justify-end p-4">
          <label for="menu-toggle" class="cursor-pointer">
            <svg
              class="h-6 w-6 text-gray-700"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </label>
        </div>

        <ul class="flex flex-col space-y-6 mt-4 ml-6">
          <li>
            <a
              href="#about-hospice"
              class="text-gray-700 text-lg font-bold hover:text-[#2F855A]"
              >About Hospice Care</a
            >
          </li>
          <li>
            <a
              href="#get-guidance"
              class="text-gray-700 text-lg font-bold hover:text-[#2F855A]"
              >Get Free Guidance</a
            >
          </li>
          <li>
            <a
              href="#hospice-faq"
              class="text-gray-700 text-lg font-bold hover:text-[#2F855A]"
              >Hospice FAQ</a
            >
          </li>
          <li>
            <a
              href="tel:949-664-9916"
              class="px-4 py-2 text-white font-semibold rounded-lg bg-[#2F855A] hover:bg-[#186e43] transition flex items-center gap-2"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              949-664-9916
            </a>
          </li>
          <li>
            <a
              href="#contact"
              class="px-4 py-2 text-[#2F855A] font-semibold border-2 border-[#2F855A] rounded-lg hover:bg-[#2F855A] hover:text-white transition"
            >
              Contact Us
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
