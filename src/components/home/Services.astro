---
import pathImg from "../../assets/img/services.jpeg";
import { services } from "../../data/servicesData.js";
---

<section id="services" class="mt-16 pb-16 md:pb-25 bg-background">
          <div class="w-full mb-18">
    <img
      src={pathImg.src}
      alt="Care and health for everyone"
      class="w-full h-[400px] md:h-[500px] object-cover shadow-md"
    />
  </div>
  <div class="max-w-7xl mx-auto px-6">
    <div class="max-w-4xl mx-auto  mb-12">

      <div class="bg-lightgreen border-l-8 border-green p-6 rounded-lg mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-blue my-5 ml-5">
        Hospice Care Services and Support
      </h2>
      </div>
            {
        services.map((service) => (
        <h3 class="text-2xl md:text-3xl font-bold text-green mb-8 mt-17">
          {service.title}
        </h3>
          <p class="text-left space-y-6 text-grey text-base md:text-lg leading-relaxed">
          {service.desc}
        </p>   

        
        ))
      }




      <div class="mt-17">
        <a
          href="#get-guidance"
          class="px-6 py-3 bg-green hover:bg-green-800 text-white font-bold rounded-3xl transition inline-block"
        >
          Request a free assessment
        </a>
      </div>
    </div>
    
  </div>
</section>
